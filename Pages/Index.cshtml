@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="jumbotron text-center">
    <h1>Welcome to RecruitCat</h1>
    <p>We connect talent with the top companies in the industry.</p>
</div>

<section id="services" class="py-5">
    <div class="container">
        <h2 class="text-center">Our Services</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <img class="card-img-top" src="/Images/Team1.jpg" alt="Service 1">
                    <div class="card-body">
                        <h5 class="card-title">Job Matching</h5>
                        <p class="card-text">We match candidates with the right companies based on skills and culture fit.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <img class="card-img-top" src="/Images/Team2.jpg" alt="Service 2">
                    <div class="card-body">
                        <h5 class="card-title">Resume Review</h5>
                        <p class="card-text">Our experts review and optimize resumes to make sure candidates stand out.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <img class="card-img-top" src="/Images/Team1.jpg" alt="Service 3">
                    <div class="card-body">
                        <h5 class="card-title">Interview Coaching</h5>
                        <p class="card-text">Prepare for interviews with our coaching sessions, ensuring confidence and success.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="testimonials" class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center">Testimonials</h2>
        <div class="row">
            <div class="col-md-6">
                <blockquote class="blockquote">
                    <p class="mb-0">"RecruitCat helped me land my dream job in just two weeks!"</p>
                    <footer class="blockquote-footer">John Doe, Software Engineer</footer>
                </blockquote>
            </div>
            <div class="col-md-6">
                <blockquote class="blockquote">
                    <p class="mb-0">"The team at RecruitCat is professional, fast, and supportive throughout the entire process."</p>
                    <footer class="blockquote-footer">Jane Smith, Marketing Manager</footer>
                </blockquote>
            </div>
        </div>
    </div>
</section>

<section id="contact" class="py-5">
    <div class="container">
        <h2 class="text-center">Contact Us</h2>
        <p class="text-center">123 Business Street, City, Country | Phone: +123 456 789</p>
    </div>
</section>